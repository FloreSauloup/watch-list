<header style = "height: 50vh;
  min-height: 500px;
  background-image: url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;">
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="col-12 text-center">
        <h1 class="fw-light" style = "color: white">Save any kind of movies</h1>
        <p class="lead" style = "color:white">My first website!</p>
      </div>
    </div>
  </div>
</header>


<div class = "container" style = "margin-top: 30px">
  <div class = "row">
    <div class = "col-sm-8">
      <h2>My lists</h2>
    </div>
    <div class = "col-sm-4">
      <%= link_to "Create a list", new_list_path, :class=>"btn btn-primary"   %>
    </div>
  </div>
  <div class = "row">
    <div class="card-deck">
      <% @lists.each do |list| %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= link_to list.name, list_path(list)%></h5>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

