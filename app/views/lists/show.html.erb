<h1><%= @list.name %></h1>

<ul class="list-group">
  <% @list.movies.each do |movie| %>
    <li class="list-group-item">
      <%= movie.title %>
      <%= movie.overview %>
      <%= link_to "Remove",
                  bookmark_path(movie, @list),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add a bookmark', new_list_bookmark_path(@list) %>


